{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "hcaDssCiCdLambdaReadAccess",
      "Action": [
        "lambda:ListFunctions",
        "lambda:ListTags",
        "lambda:TagResource"
      ],
      "Resource": "*",
      "Effect": "Allow"
    },
    {
      "Sid": "AllowChaliceToSetRolePolicyForLambda",
      "Effect": "Allow",
      "Action": [
        "iam:AttachRolePolicy",
        "iam:DeleteRolePolicy",
        "iam:DetachRolePolicy",
        "iam:PutRolePolicy",
        "iam:GetRole"
      ],
      "Resource": [
        "*"
      ]
    },
    {
      "Sid": "Stmt1471020565001",
      "Effect": "Allow",
      "Action": [
        "apigateway:GET",
        "apigateway:HEAD"
      ],
      "Resource": [
        "arn:aws:apigateway:$region_name::/restapis",
        "arn:aws:apigateway:$region_name::/restapis/*/resources",
        "arn:aws:apigateway:$region_name::/restapis/*/resources/*"
      ]
    },
    {
      "Sid": "Stmt1471020565002",
      "Effect": "Allow",
      "Action": [
        "apigateway:DELETE"
      ],
      "Resource": [
        "arn:aws:apigateway:$region_name::/restapis/*/resources/*"
      ]
    },
    {
      "Sid": "Stmt1471020565003",
      "Effect": "Allow",
      "Action": [
        "apigateway:POST"
      ],
      "Resource": [
        "arn:aws:apigateway:$region_name::/restapis/*/deployments",
        "arn:aws:apigateway:$region_name::/restapis/*/resources/*"
      ]
    },
    {
      "Sid": "Stmt1471020565004",
      "Effect": "Allow",
      "Action": [
        "apigateway:PUT"
      ],
      "Resource": [
        "arn:aws:apigateway:$region_name::/restapis/*/methods/GET",
        "arn:aws:apigateway:$region_name::/restapis/*/methods/GET/*",
        "arn:aws:apigateway:$region_name::/restapis/*/methods/POST",
        "arn:aws:apigateway:$region_name::/restapis/*/methods/POST/*",
        "arn:aws:apigateway:$region_name::/restapis/*/methods/PUT",
        "arn:aws:apigateway:$region_name::/restapis/*/methods/PUT/*"
      ]
    }
  ]
}
